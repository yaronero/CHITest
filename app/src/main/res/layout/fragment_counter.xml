<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:textSize="@dimen/counter_text_size"
        app:layout_constraintBottom_toTopOf="@id/btn_increment_counter"
        app:layout_constraintEnd_toEndOf="@id/btn_increment_counter"
        app:layout_constraintStart_toStartOf="@id/btn_increment_counter"
        tools:text="0" />

    <Button
        android:id="@+id/btn_increment_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increment_counter"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>